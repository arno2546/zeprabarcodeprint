<Controls:MetroWindow
    x:Class="ZebraPrinter.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZebraPrinter.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="TWELVE BARCODE PRINTER"
    Width="800"
    MinHeight="700"
    MinWidth="1200"
    mc:Ignorable="d">
    <Window.Background>
        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FFF0F0F0" />
            <GradientStop Offset="1" Color="#FF9BC1EB" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--<Image
                Width="100"
                Height="100"
                Source="Resources/favicon.png"
                Stretch="Uniform" />-->
            <StackPanel
                Grid.Column="1"
                Margin="24,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Barcode" Width="60" Height="50"/>
                <TextBlock
                    Style="{StaticResource MaterialDesignDisplay1TextBlock}"
                    TextOptions.TextHintingMode="Animated"
                    TextWrapping="Wrap"
                    FontWeight="Bold">
                     BARCODE PRINT
                </TextBlock>                
            </StackPanel>
        </Grid>

        <!--<TextBox
            x:Name="txt_barcode"
            Grid.Row="1"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Barcode Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding BarcodeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="txtbx_one"
            Grid.Row="2"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_one, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="txtbx_two"
            Grid.Row="3"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_two, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="txtbx_three"
            Grid.Row="4"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_three, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="txtbx_four"
            Grid.Row="5"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_four, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="txtbx_five"
            Grid.Row="6"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_five, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtbx_six"
            Grid.Row="7"
            Width="205"
            Height="37"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Please Enter Your Label Here.."
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding txt_six, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            TextWrapping="Wrap" />
        <Controls:NumericUpDown
            x:Name="txt_copy"
            Grid.Row="8"
            Width="205"
            Margin="0,15,0,0"
            materialDesign:HintAssist.Hint="Copy"
            Interval="1"
            Minimum="0"
            Value="{Binding Copy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->

        <StackPanel 
            Grid.Row="1" 
            Orientation="Horizontal" >
            <!--<TextBox
            x:Name="txt_barcode"           
            Width="205"
            Height="37"          
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0 0 0 10"
            materialDesign:ColorZoneAssist.Mode="Light"
            materialDesign:HintAssist.Hint="Barcode"
            materialDesign:HintAssist.HintOpacity="1"
            materialDesign:HintAssist.IsFloating="True"
            Text="{Binding BarcodeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
            <Button Height="27" >
                <materialDesign:PackIcon Kind="Search" />
            </Button>-->
            
            <!--<telerik:RadAutoCompleteBox
                             x:Name="CustomerCmboBx"
                             WatermarkContent ="Search Customer"
                             FontFamily="/Fonts/#Montserrat-Light"
                             FontSize="16"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             HorizontalAlignment="Stretch"
                             DisplayMemberPath="ProductName"                    
                             TextSearch.TextPath ="ProductName"
                             SelectionMode="Single" 
                              />-->

            <telerik:RadWatermarkTextBox 
                x:Name="articleSearchBx"
                WatermarkContent="Enter product barcode or name" 
                KeyUp="articleSearchBx_KeyUp"
                Margin="10 0 0 10"
                Height="25"
                FontSize="15"
                >
                <telerik:StyleManager.Theme>
                    <telerik:Windows8Theme/>
                </telerik:StyleManager.Theme>
            </telerik:RadWatermarkTextBox>
            <CheckBox 
                x:Name="vatInclusiveCheck"
                IsChecked="False"
                Margin="15 0 0 10" 
                Click="vatInclusiveCheck_Click"
                FontSize="15"
                FontWeight="SemiBold"
                >  
                Vat Inclusive
            </CheckBox>
            
            <Button
                x:Name="clearButton"                
                Click="clearButton_Click"                
                Margin="20 0 0 10"
                >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" Height="20" Width="20"/>
                    <TextBlock Margin="10 0 0 0" 
                            Text="Clear Selection"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>


        <Border Grid.Row="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity=".4" Direction="310"/>
            
            </Border.Effect>
            <DataGrid 
                Name="articlesGrid"
                AutoGenerateColumns="False"           
                CanUserAddRows="False"
                Margin="10 0 10 0">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="400" Header="Product Name"  Binding="{Binding ProductName}"/>
                    <DataGridTextColumn Width="200" Header="Barcode" Binding="{Binding Barcode}" />
                    <DataGridTextColumn Width="200" Header="Size" Binding="{Binding SizeName}" />
                    <DataGridTextColumn Width="200" Header="Color" Binding="{Binding ColorName}" />
                    <Controls:DataGridNumericUpDownColumn Minimum="0" Header="Qty" Binding="{Binding Qty}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

       
        <Button
            x:Name="btn_print"
            Grid.Row="9"
            Width="214"
            Height="31"
            Margin="0,10,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"            
            Click="btn_print_Click"
            FontWeight="ExtraLight"
            Foreground="#FFF6F6F6">
            <StackPanel Orientation="Horizontal">

                <materialDesign:PackIcon Kind="Printer" Height="20" Width="20"/>
                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    FontWeight="SemiBold">
                    Print Barcode
                </TextBlock>

            </StackPanel>
        </Button>

        <Popup Placement="Center"
                    Name="prodGridPopUp" HorizontalAlignment="Center" Width="1000" 
                    IsOpen="False" VerticalAlignment="Center" Height="600"
                    StaysOpen="False" 
               AllowsTransparency="True">

            
            <Border Margin="0,0,8,8" Background="White" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.4"/>
                </Border.Effect>
                <telerik:RadGridView x:Name="ProductGrid"                           
                                AutoGenerateColumns="False"                              
                                Grid.Row="2"
                                FilteringMode="FilterRow"
                                IsFilteringAllowed="False"
                                IsReadOnly="True"
                                ShowSearchPanel="True"
                                SearchPanelCloseButtonVisibility ="Collapsed" 
                                MouseDoubleClick="ProductGrid_MouseDoubleClick" 
                                >
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn 
                                ShowFieldFilters="True"  Width="*" 
                                DataMemberBinding="{Binding ProductName}"
                                Header="Product Name"/>
                        <telerik:GridViewDataColumn 
                                             ShowFieldFilters="True" 
                                             DataMemberBinding="{Binding Barcode}"
                                             Width="*" Header="Barcode"/>

                        <telerik:GridViewDataColumn 
                                             ShowFieldFilters="False" 
                                             DataMemberBinding="{Binding ColorName}" 
                                             Width="*" Header="ColorName"/>

                        <telerik:GridViewDataColumn 
                                             DataMemberBinding="{Binding SizeName}" 
                                             Width="*" Header="SizeName"/>

                        <!--<telerik:GridViewDataColumn 
                                             DataMemberBinding="{Binding RPU, Mode=TwoWay}" 
                                             Width="*" Header="RPU">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadNumericUpDown Value="{Binding Value}"/>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>

                        <telerik:GridViewDataColumn.CellEditTemplate>
                            <DataTemplate>
                                <telerik:RadNumericUpDown Value="{Binding Value}"/>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellEditTemplate>
                    </telerik:GridViewDataColumn>-->

                    </telerik:RadGridView.Columns>
                    <telerik:StyleManager.Theme>
                        <telerik:Windows8Theme/>
                    </telerik:StyleManager.Theme>

                </telerik:RadGridView>
            </Border>
        </Popup>
        
    </Grid>

    

</Controls:MetroWindow>

    